<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_legend</item>
    </style>

    <style name="FloatingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundDarkTransparent</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="DescriptionDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

</resources>
